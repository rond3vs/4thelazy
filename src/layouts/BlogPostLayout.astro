---
// src/layouts/BlogPostLayout.astro
import MainLayout from './MainLayout.astro';
import { formatDate } from '../utils/formatDate';
import Newsletter from '../components/Newsletter.astro';

interface Props {
  title: string;
  pubDate: Date;
  updatedDate?: Date;
  image?: string;
  tags?: string[];
  type: string;
  isSponsored?: boolean;
  description?: string;
}

const { 
  title, 
  pubDate, 
  updatedDate, 
  image, 
  tags, 
  type, 
  isSponsored,
  description 
} = Astro.props;
---

<MainLayout title={title} description={description}>
  <article class="blog-post">
    <div class="container">
      <button class="back-button" onclick="history.back()">‚Üê Back</button>
      <header class="post-header">
        {isSponsored && <div class="sponsored-badge">Sponsored</div>}
        
        <div class="post-meta">
          <span class="post-type">{type}</span>
          <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>
          {updatedDate && (
            <span class="updated-date">
              Updated: <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>
            </span>
          )}
        </div>
        
        <h1 class="post-title">{title}</h1>
        
        {description && <p class="post-description">{description}</p>}
        
        {tags && tags.length > 0 && (
          <div class="post-tags">
            {tags.map((tag: string) => (
              <a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`} class="tag">#{tag}</a>
            ))}
          </div>
        )}
      </header>
      
      {image && (
        <div class="post-image">
          <img src={image} alt={title} loading="eager" />
        </div>
      )}
      
      <div class="post-content">
        <slot />
        <Newsletter />
      </div>
    </div>
  </article>
</MainLayout>

<style>

  /* Back Button */
  .back-button {
    display: inline-flex;
    align-items: center;
    padding: var(--spacing-sm) var(--spacing-md);
    background-color: var(--color-white);
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-sm);
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(0.75rem, 0.9vw, 0.9rem);
    color: var(--color-primary);
    text-decoration: none;
    cursor: pointer;
    margin-bottom: var(--spacing-lg);
    transition: all 0.2s ease;
  }
  
  .back-button:hover {
    background-color: var(--color-primary);
    color: var(--color-white);
  }

  /* Layout */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
  }
  
  .blog-post {
    padding: var(--spacing-xl) 0;
  }
  
  .post-header {
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  /* Sponsored Badge */
  .sponsored-badge {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--color-primary);
    color: var(--color-white);
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(0.75rem, 0.9vw, 0.9rem);
    border-radius: var(--radius-sm);
    margin-bottom: var(--spacing-md);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Post Meta */
  .post-meta {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: clamp(0.75rem, 0.9vw, 0.9rem);
    color: var(--color-text-light);
  }
  
  .post-type {
    display: inline-block;
    padding: 2px 8px;
    background-color: var(--color-white);
    border: 1px solid var(--color-primary);
    border-radius: var(--radius-sm);
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(0.75rem, 0.9vw, 0.9rem);
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Post Title */
  .post-title {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.2;
    margin-bottom: var(--spacing-lg); /* Increased from md to lg */
    color: var(--color-primary);
  }

  /* Post Description */
  .post-description {
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
    
  }

  /* Tags */
  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-sm);
    justify-content: center;
  }
  
  .tag {
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: clamp(0.75rem, 0.9vw, 0.9rem);
    color: var(--color-text-light);
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .tag:hover {
    color: var(--color-primary);
  }

  /* Post Image */
  .post-image {
    margin-bottom: var(--spacing-xl);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .post-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Post Content */
  .post-content {
    font-family: var(--font-primary);
    font-size: clamp(1rem, 1.5vw, 1.25rem);
    line-height: 2;
  }

  
  
  article .post-content h1 {
    font-family: var(--font-heading);
    font-weight: 400;
    font-size: clamp(2rem, 5vw, 3.5rem);
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-lg); /* Increased from md to lg */
    color: var(--color-primary);
    border: solid red 1px;
  }
  
  article .post-content h2 {
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(1.2rem, 2.5vw, 1.5rem);
    margin-bottom: var(--spacing-lg);
    color: var(--color-primary);
    line-height: 1rem;
    border: solid 1px red;
  }
  
  .post-content h3 {
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md); /* Kept at md */
    color: var(--color-primary);
    border: solid red 1px;
  }
  
  .post-content h4 {
    font-family: var(--font-primary);
    font-weight: 700;
    font-size: clamp(1rem, 1.8vw, 1.25rem);
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-md); /* Increased from sm to md */
    color: var(--color-primary);
  }

  .post-content p {
    font-family: var(--font-primary);
    font-weight: 400;
    
    margin-bottom: 11rem; /* 2rem / 32px */
  }
  
  .post-content ul,
  .post-content ol {
    display: block !important;
    list-style-position: outside !important;
    padding-left: 3rem !important;
    margin-bottom: var(--spacing-lg) !important;
    font-family: var(--font-primary);
    font-weight: 400;
  }

  .post-content ul {
    list-style-type: disc;
  }

  .post-content ol {
    list-style-type: decimal;
  }

  .post-content li {
    display: list-item;
    margin-bottom: var(--spacing-sm);
  }
  
  .post-content li strong {
    color: var(--color-primary);
  }
  
  .post-content li::marker {
    color: var(--color-primary);
  }
  
  .post-content a {
    color: var(--color-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
  }
  
  .post-content a:hover {
    color: var(--color-primary-dark);
  }
  
  .post-content blockquote {
    margin: var(--spacing-lg) 0;
    padding: var(--spacing-md) var(--spacing-lg);
    border-left: 4px solid var(--color-primary);
    background-color: var(--color-white);
    font-family: var(--font-primary);
    font-weight: 400;
    font-style: italic;
    border-radius: var(--radius-sm);
  }
  
  .post-content code {
    background-color: var(--color-white);
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-family: var(--font-primary);
    font-weight: 400;
    font-size: 0.9em;
    color: var(--color-primary-dark);
  }
  
  .post-content pre {
    background-color: var(--color-primary-dark);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    overflow-x: auto;
    margin: var(--spacing-lg) 0;
  }
  
  .post-content pre code {
    background-color: transparent;
    padding: 0;
    color: var(--color-white);
  }

  /* Responsive Adjustments */
  @media (max-width: 768px) {
    .post-title {
      font-size: clamp(1.5rem, 4vw, 2rem);
      margin-bottom: var(--spacing-md); /* Reduced to md for mobile */
    }
    
    .post-description {
      font-size: clamp(0.9rem, 1.2vw, 1.1rem);
    }
    
    .post-content {
      font-size: clamp(0.9rem, 1.2vw, 1rem);
    }
    
    .post-content h1 {
      font-size: clamp(1.5rem, 4vw, 2rem);
      margin-bottom: var(--spacing-md); /* Reduced to md for mobile */
    }
    
    .post-content h2 {
      font-size: clamp(1.1rem, 2vw, 1.3rem);
    }
    
    .post-content h3 {
      font-size: clamp(1rem, 1.8vw, 1.2rem);
    }
    
    .post-content h4 {
      font-size: clamp(0.9rem, 1.5vw, 1.125rem);
    }
  }
</style>