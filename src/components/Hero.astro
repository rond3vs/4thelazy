---
// HeroSection.astro
import Newsletter from './Newsletter.astro';
---

<section class="hero-section">
    <div class="container">
      <div class="header-content">
        <div class="title-container">
          <h1 class="hero-title">4THELAZY.COM</h1>
          <p class="tag">4 when you don't feel like it</p>
        </div>
      </div>
      <Newsletter />
      
      <div class="scroll-arrow">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M12 5v14M5 12l7 7 7-7"/>
        </svg>
      </div>
    </div>
  </section>
  
  <style>
   .hero-section {
  min-height: clamp(300px, 100vh, 600px);
  display: flex;
  align-items: center;
  margin-bottom: 3rem;
}

.container {
  margin: 0 auto;
  text-align: center;
  margin-top: 1.5rem;
  position: relative;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.this-is {
  font-size: 1rem;
  color: var(--color-primary);
  margin-bottom: 1rem;
  border-bottom: 1px solid #d1d5db;
  display: inline-block;
  padding-bottom: 0.5rem;
  opacity: 0;
  animation: fadeIn 0.8s ease-out forwards;
}

/* Title container to group title and tag for the underline */
.title-container {
  position: relative;
  display: inline-block;
  margin-bottom: 2rem;
}

.hero-title {
  font-size: clamp(2.5rem, 8vw, 5rem);
  color: var(--color-primary);
  font-family: 'Bungee Shade', var(--font-sans);
  position: relative;
  animation: titleEntrance 1.5s ease-out forwards;
  opacity: 0;
  margin-bottom: 1rem; /* Reduce space between title and tag */
}

.tag {
  margin-bottom: 1rem;
  color: var(--color-text);
  opacity: 0;
  animation: fadeIn 1s ease-out 0.8s forwards;
}

.hero-description {
  color: var(--color-text);
  margin-bottom: 2rem;
  line-height: 1.5;
  max-width: min(700px, 100%);
  margin: 35px auto;
  width: fit-content;
  opacity: 0;
  animation: fadeIn 1s ease-out 1.5s forwards;
}

.scroll-arrow {
  position: absolute;
  bottom: -100px;
  left: 50%;
  transform: translateX(-50%);
  animation: bounce 2s infinite;
  cursor: pointer;
  color: var(--color-primary);
  margin-bottom: 1rem;
}

/* Animations */
@keyframes titleEntrance {
  0% {
    opacity: 0;
    transform: translateY(-20px) scale(0.95);
    letter-spacing: -5px;
  }
  50% {
    opacity: 1;
    transform: translateY(10px) scale(1.05);
    letter-spacing: 2px;
  }
  100% {
    opacity: 1;
    transform: translateY(0) scale(1);
    letter-spacing: normal;
  }
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

@keyframes bounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0) translateX(-50%);
  }
  40% {
    transform: translateY(-20px) translateX(-50%);
  }
  60% {
    transform: translateY(-10px) translateX(-50%);
  }
}



@keyframes underline {
  0% {
    width: 0%;
  }
  100% {
    width: 50%;
  }
}
  </style>

