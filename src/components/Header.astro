---
// Header.astro
import SubmitPopup from './SubmitPopup.astro';
---

<header>
  <div class="container">
    <div class="logo">
      <a href="/">
        <span>4tlðŸ¥±</span>
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="/about">About</a></li>
        <li><a href="#" id="submitBtn" class="btn">Submit <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M16 8L21 12L16 16" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg></a></li>
      </ul>
    </nav>
  </div>
</header>

<!-- Include the Submit Popup component -->
<SubmitPopup />

<style>
  header {
    padding: 1rem 0;
    border-bottom: 1px solid #d1d5db;
  }
  
  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .logo a {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
    font-size: 1.25rem;
  }
  
  nav ul {
    gap: 1rem;
    list-style: none;
    display: flex;
    align-items: center;
  }
  
  .badge {
    font-size: 0.75rem;
    padding: 0.0625rem 0.125rem;
    background-color: var(--color-background);
    border-radius: var(--radius-sm);
    color: var(--color-text-light);
  }
  
  .btn svg {
    margin-left: var(--spacing-xs, 0.25rem);
  }
  
  @media (max-width: 768px) {
    nav ul {
      gap: 1rem;
    }
  }
  
  @media (max-width: 640px) {
    .container {
      flex-direction: column;
      gap: 1rem;
    }
    
    nav ul {
      justify-content: center;
      flex-wrap: wrap;
    }
  }
</style>

<script is:inline>
  // Add event listener to the submit button
  document.addEventListener('DOMContentLoaded', () => {
    const submitBtn = document.getElementById('submitBtn');
    
    submitBtn.addEventListener('click', (e) => {
      e.preventDefault();
      // Call the openSubmitPopup function exposed by the SubmitPopup component
      window.openSubmitPopup();
    });
  });
</script>