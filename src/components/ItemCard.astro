---
// src/components/ResourceItem.astro
interface Props {
  title: string;
  imageUrl: string;
  link: string;
  description: string;
  tags: string[];
  type: string;
  isSponsored?: boolean;
  contentType: 'blog' | 'product'; // Added to identify the content type
}

const { title, imageUrl, link, description, tags, type, isSponsored = false, contentType } = Astro.props;
---


<div class="resource-card" data-content-type={contentType}>
  <a href={link} class="card-link">
    <div class="card-image">
      {isSponsored && <div class="sponsored-badge">Sponsored</div>}
      <img src={imageUrl} alt={title} loading="lazy" />
    </div>
    
    <div class="card-content">
      <div class="card-meta">
        <div class="card-type">{type}</div>
        <div class="card-content-type">{contentType === 'blog' ? 'Article' : 'Product'}</div>
      </div>
      
      <h3 class="card-title">{title}</h3>
      
      {description && <p class="card-description">{description}</p>}
      
      {tags && tags.length > 0 && (
        <div class="card-tags">
          {tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </div>
  </a>
</div>

<style>
  .resource-card {
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .resource-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }
  
  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }
  
  .card-image {
    position: relative;
    aspect-ratio: 16 / 9;
    background-color: var(--color-background);
  }
  
  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .sponsored-badge {
    position: absolute;
    top: 10px;
    right: 10px;
    padding: 4px 8px;
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    font-size: 0.7rem;
    border-radius: var(--radius-sm);
    z-index: 1;
  }
  
  .card-content {
    padding: var(--spacing-md);
  }
  
  .card-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-sm);
    font-size: 0.8rem;
  }
  
  .card-type {
    display: inline-block;
    padding: 2px 8px;
    background-color: var(--color-background);
    border-radius: var(--radius-sm);
    font-weight: 600;
  }
  
  .card-content-type {
    font-weight: 600;
    color: var(--color-primary);
  }
  
  .card-title {
    margin-bottom: var(--spacing-sm);
    font-size: 1.2rem;
    font-weight: 700;
    line-height: 1.4;
  }
  
  .card-description {
    margin-bottom: var(--spacing-md);
    font-size: 0.9rem;
    color: var(--color-text-light);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }
  
  .tag {
    font-size: 0.8rem;
    color: var(--color-text-light);
  }
  
  .tag:not(:last-child):after {
    content: "â€¢";
    margin-left: var(--spacing-xs);
    color: var(--color-border);
  }
</style>